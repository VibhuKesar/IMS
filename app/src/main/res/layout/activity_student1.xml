<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_weight="0.1"
        android:background="#303F9F"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:text="PLEASE ENTER THE DETAILS"
            android:fontFamily="casual"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_ll_new"
        android:layout_width="fill_parent"
        android:layout_weight="0.46"
        android:padding="30dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/add_edt_name"
                android:layout_width="fill_parent"
                android:layout_marginTop="10dp"
                android:hint="Name"
                android:padding="5dp"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/add_edt_fatherName"
                android:layout_width="fill_parent"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:hint="Father Name"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/add_edt_address"
                android:layout_width="fill_parent"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:hint="Address"
                android:textColor="#303F9F"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/add_edt_mobile"
                android:layout_width="fill_parent"
                android:layout_marginTop="15dp"
                android:background="#FFFDFDFD"
                android:padding="5dp"
                android:inputType="number"
                android:hint="Mobile No."
                android:textColor="#FF000000"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>


        <TextView
            android:id="@+id/add_tv_course"
            android:layout_width="wrap_content"
            android:text="SELECT COURSE TO TEACH"
            android:layout_marginTop="15dp"
            android:textColor="#303F9F"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/add_sp_course"
            android:layout_width="fill_parent"
            android:layout_marginTop="15dp"
            android:entries="@array/courses"
            android:background="@drawable/roundbtn"
            android:layout_height="50dp">

        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_ll_reg"
        android:layout_width="fill_parent"
        android:layout_weight="0.8"
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:background="#303F9F"
        android:orientation="vertical"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/add_tv_hiname"
            android:layout_width="wrap_content"
            android:text="Hi Libbna"
            android:textColor="#FFFDFDFD"
            android:fontFamily="casual"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/add_tv_sucessfull"
            android:layout_width="wrap_content"
            android:text="Your Admission is successFull........"
            android:textColor="#FFFDFDFD"
            android:fontFamily="casual"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/add_tv_regitration"
            android:layout_width="wrap_content"
            android:text="Registation id: 1"
            android:textColor="#FFFDFDFD"
            android:fontFamily="casual"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/add_btn_ok"
            android:layout_width="wrap_content"
            android:text="Ok"
            android:onClick="onClick"
            android:clickable="true"
            android:fontFamily="casual"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:background="@drawable/roundbtn"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_ll_bottom"
        android:layout_width="fill_parent"
        android:layout_weight="0.1"
        android:background="#303F9F"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="visible"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/add_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_marginRight="50dp"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:background="@drawable/roundbtn"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/add_btn_submit"
            android:layout_width="wrap_content"
            android:text="Submit"
            android:textColor="#ffffff"
            android:background="@drawable/roundbtn"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
